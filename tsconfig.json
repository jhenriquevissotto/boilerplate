{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "~/app": ["app"],
            "~/app/*": ["app/*"],
            "~/backend": ["backend"],
            "~/backend/*": ["backend/*"],
            "~/common": ["common"],
            "~/common/*": ["common/*"],
            "~/database": ["database"],
            "~/database/*": ["database/*"],
            "~/ioc": ["ioc"],
            "~/ioc/*": ["ioc/*"],
            "~/frontend": ["frontend"],
            "~/frontend/*": ["frontend/*"],
            "~/libs": ["libs"],
            "~/libs/*": ["libs/*"],
            "~/public": ["public"],
            "~/public/*": ["public*"],
            "~/src": ["src"],
            "~/src/*": ["src/*"],
            "~/state": ["state"],
            "~/state/*": ["state/*"],
            "~/types": ["types"],
            "~/types/*": ["types/*"],
            "~/view": ["view"],
            "~/view/*": ["view/*"],
            "~/html": ["view/html"],
            "~/html/*": ["view/html/*"]
        },
        "incremental": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
